{
  "name": "@ci-dokumentor/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "nx run-many --target=build --all --parallel",
    "lint": "nx run-many --target=lint --all --parallel",
    "test": "nx run-many --target=test --all --parallel",
    "test:ci": "nx run-many --target=test --all --parallel --coverage.all",
    "all": "pnpm run build && pnpm run lint --fix && pnpm run test:ci",
    "docs:install": "cd docs && npm ci",
    "docs:start": "cd docs && npm start",
    "docs:build": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve",
    "docs:clear": "cd docs && npm run clear"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@nx/eslint": "20.8.0",
    "@nx/eslint-plugin": "20.8.0",
    "@nx/js": "20.8.0",
    "@nx/vite": "20.8.0",
    "@nx/web": "20.8.0",
    "@swc-node/register": "~1.9.2",
    "@swc/core": "~1.5.29",
    "@swc/helpers": "~0.5.17",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "18.16.9",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "jest-serializer-html": "^7.1.0",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "jsonc-eslint-parser": "^2.4.0",
    "mock-fs": "^5.5.0",
    "nx": "20.8.0",
    "prettier": "^2.8.8",
    "tslib": "^2.8.1",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "~4.5.4",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
