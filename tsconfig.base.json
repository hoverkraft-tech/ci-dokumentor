{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": false,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@ci-dokumentor/core/tests": ["packages/core/__tests__/index.ts"]
    }
  }
}
